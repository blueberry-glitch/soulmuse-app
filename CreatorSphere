body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background-color: #fff4f4;
  color: #333;
}

nav {
  position: sticky;
  top: 0;
  background: white;
  padding: 1rem;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
}

button {
  margin: 0 0.25rem;
  padding: 0.5rem 1rem;
  border: none;
  background-color: #ffbfd6;
  color: #333;
  border-radius: 12px;
  cursor: pointer;
}

