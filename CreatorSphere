  width: 100%;
  height: 200px;
  padding: 1rem;
  border: 1px solid #ccc;
  border-radius: 12px;
}
document.getElementById("app").innerHTML = `
  <nav>
    <div>
      <button onclick="navigate('studio')">🎥 Studio</button>
      <button onclick="navigate('notes')">📓 Notas</button>
      <button onclick="navigate('quotes')">💡 Frases</button>
      <button onclick="navigate('planner')">🗓️ Planner</button>
      <button onclick="navigate('vibe')">🧃 Vibe</button>
    </div>
  </nav>
  <main id="mainContent"></main>
`;

function navigate(section) {
  const main = document.getElementById("mainContent");
  if (section === "studio") {
    main.innerHTML = `
      <h2>🎥 Media Studio</h2>
      <input type="file" multiple accept="image/*,video/*" onchange="handleMedia(event)" />
      <div id="mediaGallery" style="margin-top: 1rem;"></div>
    `;
  } else if (section === "notes") {
    main.innerHTML = `
      <h2>📓 Notas</h2>
      <textarea id="notes">${localStorage.getItem("notes") || ""}</textarea>
      <button onclick="saveNotes()">💾 Guardar</button>
    `;
  } else if (section === "quotes") {
    main.innerHTML = `
      <h2>💡 Frases motivadoras</h2>
      <ul>
        <li>"Cree en ti y todo será posible."</li>
        <li>"Hazlo con pasión o no lo hagas."</li>
        <li>"Tu contenido tiene valor, no lo subestimes."</li>
        <li>"Brilla con luz propia."</li>
      </ul>
    `;
  } else if (section === "planner") {
    main.innerHTML = "<h2>🗓️ Planner</h2><p>Próximamente...</p>";
  } else if (section === "vibe") {
    main.innerHTML = "<h2>🧃 Vibe Maker</h2><p>En construcción.</p>";
  }
}

function handleMedia(event) {
  const gallery = document.getElementById("mediaGallery");
  Array.from(event.target.files).forEach(file => {
    const url = URL.createObjectURL(file);
    const element = file.type.startsWith("video")
      ? `<video controls src="${url}" style="width:100%; max-height:200px; margin-top:10px;"></video>`
      : `<img src="${url}" style="width:100%; max-height:200px; margin-top:10px;" />`;
    gallery.innerHTML += element;
  });
}

function saveNotes() {
  const notes = document.getElementById("notes").value;
  localStorage.setItem("notes", notes);
  alert("Notas guardadas ✨");
}

navigate("studio"); // inicia en la sección Studio